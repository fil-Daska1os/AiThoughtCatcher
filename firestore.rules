rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User thoughts collection
    match /user_thoughts/{thoughtId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Chat queries - users can create and read their own queries
    match /chat_queries/{queryId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow Cloud Function to update (status, answer)
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Batch requests - users can create and read their own requests
    match /batch_requests/{requestId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
